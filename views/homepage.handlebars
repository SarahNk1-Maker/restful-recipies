<!-- Loop over each recipe post in the recipe array -->
{{#each recipe as |recipe| }}
<div class="row mb-4 recipe">
  <div class="col-md-5">
    <h2>
      <a href="/recipe/{{recipe_id}}">{{recipe.title}}</a>
    </h2>
 <p>Created by {{recipe.chef}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{recipe.description}}
    </p>
  </div>
</div>
{{/each}}