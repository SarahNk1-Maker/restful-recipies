<!-- Loop over each recipe post in the recipe array -->

<div class="row mb-4 recipe">
  <div class="col-md-5">
    <h2>
      <a href="/recipe/{{id}}">{{title}}</a>
    </h2>
 <p>Created by {{user.username}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
      <p>Prep Time: {{prep_time}}</p>
      <p>Cook Time: {{cook_time}}</p>
    </p>
  </div>
</div>
 
