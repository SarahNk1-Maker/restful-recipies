{{#each recipes as |recipe|}}
<div class="row mb-4 recipe">
  <div class="col-md-5">
    <h2>
      <a href="/recipe/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    {{#if recipe.user.username}}
    <p>Created by {{recipe.user.username}}</p>
    {{else}}
    <p>Created by an anonymous eukaryotic being.</p>
    {{/if}}
  </div>
  <div class="col-md-7">
    <p>
      {{recipe.description}}
    </p>
  </div>
</div>
{{/each}}