{{!-- The users profile page. Shows their own recipes. --}}
<div>
  <div>
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<section id="newRecipeForm">
    <h3>Create a New Recipe:</h3>
    <form id="recipeForm">
        <div>
            <label for="recipeName">Recipe name:</label>
            <input type="text" id="recipe-title">
        </div>

        <div>
            <label for="description">Description:</label>
            <input type="text" id="recipe-desc">
        </div>

        <div>
            <label for="ingredientsList">Ingredients List:</label>
            <input type="text" id="recipe-ingredients">
        </div>

        <div>
            <label for="instructions">Instructions:</label>
            <input type="text" id="recipe-instructions">
        </div>

        <div>
            <label for="prepTime">Prep Time:</label>
            <input type="text" id="recipe-prepTime">
        </div>

        <div>
            <label for="cookTime">Cook Time:</label>
            <input type="text" id="recipe-cookTime">
        </div>

        <button type="submit">Create Recipe</button>
    </form>
</section>

{{#if recipes.length}}
<section id="chefRecipeList">
    <h3>Current Recipes:</h3>
    {{#each recipes as |recipe|}}
      <div>
        <h4><a href="/recipe/{{recipe.id}}">{{recipe.title}}</a></h4>
      </div>
      <div>
        <button data-id="{{recipe.id}}">DELETE</button>
      </div>
    {{/each}}
  </section>
{{/if}}

<button id="delete">Delete Account</button>

<script src="./js/profile.js"></script>
